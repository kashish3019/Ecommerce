<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Products</title>
  <style>
    body{
      background-color: #f5f5f5;
    }
    #box {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      padding: 13px 13px 0px;
    }
    
    .product-details-container {
      text-align: center;
      padding: 20px;
      border-radius: 15px;
      border: 1px solid rgba(0, 0, 0, 0.313);
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    
    .product-img {
      width: 200px;
      height: 200px;
      border-radius: 10px;
      /* border: 1px solid rgba(0, 0, 0, 0.313); */
      margin-bottom: 10px;
    }
    
    .product-details {
      text-align: left;
    }
    
    .product-details h3 {
      margin: 5px 0;
      font-weight: bold;
    }
    
    .product-details p {
      margin: 5px 0;
    }
    
    #box div button {
      border-radius: 10px;
      padding: 6px 40px 6px;
      margin-top: 10px;
      background-color: #439bab5a;
    }
    
    #box div button:hover { 
      background-color: #366E78;
      transition: all 0.5s;
    }
    
    .p-title {
      text-align: center;
      padding-top: 20px;
      font-weight: 700;
      padding-bottom: 20px;
    }
  </style>
</head>

<body>

  <%- include("nav") %>
  <p class="p-title">All Products</p>
  <div id="box"></div>

  <script>
    const handlecart = (id) => {
      console.log(id);
      fetch("/product/cart", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ productId: id }),
      })
    }

    const display = (data) => {
      document.getElementById("box").innerHTML = "";
      data.map((ele) => {
        let img = document.createElement("img");
        img.src = ele.img;
        img.classList.add("product-img");

        let title = document.createElement("h3");
        title.innerHTML = `Title: ${ele.title}`;

        let category = document.createElement("p");
        category.innerHTML = `Category: ${ele.category}`;

        let price = document.createElement("p");
        price.innerHTML = `Price: $${ele.price}`;

        let availability = document.createElement("p");
        availability.innerHTML = `Availability: ${ele.availability}`;

        let colour = document.createElement("p");
        colour.innerHTML = `Colour: ${ele.colour}`;

        let btn1 = document.createElement("button");
        btn1.innerHTML = "Buy";
        btn1.addEventListener("click", () => {
          handlecart(ele._id);
        })

        let detailsDiv = document.createElement("div");
        detailsDiv.classList.add("product-details");
        detailsDiv.append(title, category, price, availability, colour, btn1);

        let detailsContainer = document.createElement("div");
        detailsContainer.classList.add("product-details-container");
        detailsContainer.append(img, detailsDiv);

        let productBox = document.createElement("div");
        productBox.appendChild(detailsContainer);
        document.getElementById("box").append(productBox);
      });
    };

    // Fetching product data
    fetch("/product")
      .then((response) => response.json())
      .then((response) => display(response))
      .catch((error) => console.log(error));
  </script>
</body>

</html>
